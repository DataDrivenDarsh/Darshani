print('No.5 - Pizza   = 100/-Rs ')
price= [0,30,25,20,50,100]
items = ['','Vadapav','Dabeli','Puff','Burger','Pizza']
k = int(input('How many items do you went to ordered: '))
i = 0
item_list = []
for i in range(k):
    a = int(input(f'order item no.'))
    item_list.append(a)
item_list
t = 0
price_list = []
for x in item_list:
    c = items[x]
    price_list.append(c)
    v = price[x]
    t = t + v
print(f'Your order is : {price_list}')
print(f'Your total price is :  {t}')
